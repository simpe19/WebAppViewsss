
@model LoginViewModel

@{
    ViewData["Title"] = "Log in to your account";
}
<section class="login-form">
    <div class="container">
        <div class="title">@ViewData["Title"]</div>

        <form method="post" novalidate asp-route-ReturnUrl="@Model.ReturnUrl">

            <div asp-validation-summary="ModelOnly" class="error form-group"></div>

            <div class="email form-group">
                <label asp-for="Email">
                    E-mail*
                    <a asp-action="index" asp-controller="register">Don't have an account yet?</a>
                </label>
                <input asp-for="Email"/>
                <span asp-validation-for="Email" class="error"></span>


            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password" class="error"></span>
            </div>

            <div class="rememberme form-checkbox-group">
                <label class="custom-checkbox">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">Submit</button>
        </form>
    </div>
</section>
